<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body class="sb-nav-fixed">
    <%- include('./partials/topnav') %>
    <div id="layoutSidenav">
        <%- include('./partials/sidenav') %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h3 class="mt-4">Auctions</h3>

                    <div class="card mb-4">
                        <div class="card-header">
                            <form action="/admin/auctions" method="post" class="d-flex">
                                <input class="form-control d-inline me-2" style="width: auto;" type="text" name="title" placeholder="Auction Title" />
                                <input class="form-control d-inline me-2" style="width: auto;" type="text" name="description" placeholder="Description" />
                                <div class="mx-auto">
                                    <div class="form- d-inline">
                                        <label for="startDate">Start Date</label>
                                        <input class="form-control d-inline me-2" style="width: auto;" type="date" name="startDate" />
                                    </div>
                                    <div class="form-group d-inline">
                                        <label for="endDate">End Date</label>
                                        <input class="form-control d-inline me-2" style="width: auto;" type="date" name="endDate" />
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary d-inline" type="submit"><i class="fas fa-plus"></i> Add New</button>
                            </form>   
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% auctions.forEach(auction => { %>
                                        <tr>
                                            <td><%= auction.Title %></a></td>
                                            <td><%= auction.Description %></td>
                                            <td><%= auction.StartDate %></td>
                                            <td><%= auction.EndDate %></td>
                                            <td><%= auction.Status %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('./partials/footer') %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/public/vendors/sb-admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="/public/vendors/sb-admin/assets/demo/chart-area-demo.js"></script>
    <script src="/public/vendors/sb-admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="/public/vendors/sb-admin/js/datatables-simple-demo.js"></script>
</body>
</html>
