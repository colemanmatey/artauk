<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>
<body>
    <%- include("../partials/header") %>

    <!-- Content -->
    <main class="signup-page">
        <section class="form-section">
            <h1 class="signup-heading">Create Your Account</h1>

            <% if (error) { %>
                <div class="error-message">
                    <p><%= error %></p>
                </div>
            <% } %>

            <form action="/auth/register" method="post" class="signup-form">
                <div class="input-group">
                    <label for="username">Username:</label>
                    <input type="text" name="username" id="username" placeholder="Enter your username" required />
                </div>

                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email" placeholder="Enter your email" required />
                </div>

                <div class="input-group">
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" placeholder="Enter your password" required />
                </div>

                <div class="input-group">
                    <label for="password2">Confirm Password:</label>
                    <input type="password" name="password2" id="password2" placeholder="Confirm your password" required />
                </div>

                <div class="submit-group">
                    <input type="submit" value="Register" class="btn-submit" />
                </div>
            </form>

            <p class="signup-prompt">Already have an account? <a href="/auth/login">Sign in!</a></p>
        </section>
    </main>

    <!-- Sidebar -->
    <aside></aside>

    <%- include("../partials/footer") %>
</body>
</html>
