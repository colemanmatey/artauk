<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
</head>
<body>
    <%- include("./partials/header") %>
    <%- include("./partials/nav") %>
    
    <!-- Content -->
    <main>
        <section>
            <h2>Create Profile</h2>
            <form action="/profile/onboarding/user/<%= userID %>/new" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="FirstName" maxlength="50" required>
                </div>
        
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="LastName" maxlength="50" required>
                </div>
        
                <div class="form-group">
                    <label for="dateOfBirth">Date of Birth:</label>
                    <input type="date" id="dateOfBirth" name="DateOfBirth">
                </div>
        
                <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="Phone" maxlength="20">
                </div>
        
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="Address" maxlength="255">
                </div>
        
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="City" maxlength="100">
                </div>
        
                <div class="form-group">
                    <label for="state">Province:</label>
                    <input type="text" id="province" name="Province" maxlength="100">
                </div>
        
                <div class="form-group">
                    <label for="postalCode">Postal Code:</label>
                    <input type="text" id="postalCode" name="PostalCode" maxlength="20">
                </div>
        
                <div class="form-group">
                    <label for="country">Country:</label>
                    <input type="text" id="country" name="Country" maxlength="100">
                </div>
        
                <div class="form-group">
                    <label for="image">Upload image</label>
                    <input type="file" id="profilePicture" name="ProfilePicture" >
                </div>
        
                <div class="form-group">
                    <label for="bio">Bio:</label>
                    <textarea id="bio" name="Bio" maxlength="500" rows="4" cols="50"></textarea>
                </div>
        
                <div class="form-group">
                    <button type="submit">Submit Profile</button>
                </div>
            </form>
        </section>
    </main>
    
    <!-- Sidebar -->
    <aside></aside>
    
    <%- include("./partials/footer") %>
</body>
</html>
